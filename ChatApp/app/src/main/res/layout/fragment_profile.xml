<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    tools:context="com.example.administrator.chatapp.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/profileTitle"
        android:layout_centerHorizontal="true"
        app:srcCompat="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/proLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/proAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userImage"
        android:textSize="40dp"
        android:textColor="#000000"
        android:text="Age : " />

    <EditText
        android:id="@+id/usrAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userImage"
        android:layout_toRightOf="@+id/proAge"
        android:textAlignment="center"
        android:textSize="30dp"
        android:hint="age"
        android:inputType="text|textPersonName" />

    <TextView
        android:id="@+id/proName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proAge"
        android:paddingTop="10dp"
        android:textSize="40dp"
        android:textColor="#000000"
        android:text="Name : " />

    <EditText
        android:id="@+id/usrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@id/proAge"
        android:layout_toRightOf="@+id/proName"
        android:textAlignment="center"
        android:textSize="30dp"
        android:hint="Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/proStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/proLogout"
        android:layout_alignParentBottom="true"
        android:text="Store" />

</RelativeLayout>
